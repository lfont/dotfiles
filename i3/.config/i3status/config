# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = i3bar
  colors = true
  interval = 5
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "tztime local"

disk "/" {
  format = "/ %avail"
}

disk "/home" {
  format = "/home %avail"
}

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: (%speed) %ip"
  format_down = "E: down"
}

battery all {
  format = "%status %percentage %remaining"
  format_down = "No battery"
  status_chr = "⚡ CHR"
  status_bat = "↯ BAT"
  status_unk = "� UNK"
  status_full = "☻ FULL"
}

cpu_usage {
  format = "%usage"
}

load {
  format = "%1min"
}

volume master {
  format = "♪: %volume"
  format_muted = "♪: muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "%a %F %I:%M:%S %p"
}
