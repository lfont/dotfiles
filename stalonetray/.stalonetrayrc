# Icons stick to right side of tray
icon_gravity E
# Six icons wide, one high, 0 pixels from right, 0 from top
geometry 7x1-0+0
max_geometry 7x1-0+0
# Black background
background "#000000"
# Doesn't appear in a task bar (not a problem for us?)
skip_taskbar
# Icons are 30 pixels high
icon_size 30
kludges force_icons_size
# Tell xmonad "Stand back, I got this"
window_strut none
# Scrollbar
scrollbars horizontal
