[core]
    editor       = emacsclient -t -a nano
    excludesfile = ~/.gitignore

[diff]
    tool = ediff
[difftool "ediff"]
    cmd    = emacs -n -diff $LOCAL $REMOTE
    prompt = false

[merge]
    tool = ediff
[mergetool "ediff"]
    cmd        = emacs -n -merge $LOCAL $REMOTE $BASE $MERGED
    keepBackup = false
    prompt     = false

