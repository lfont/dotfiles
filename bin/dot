#!/usr/bin/env bash
#

# Humm, this is equivalent to cd (dirname (status -f)) in fish.
# http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

cd $DIR/..
. ./script/env.sh

if [[ $1 = "-i" ]]; then
  if [ $2 ]; then
      if [ -e ./$2/install.fish ]; then
          fish ./$2/install.fish
      else
          bash ./$2/install.sh
      fi
  else
    # find the installers and run them iteratively
    find . -name install.fish -print0 | xargs -0 fish
    find . -name install.sh -print0 | xargs -0 bash
  fi
elif [ $1 ]; then
    if [ -e ./$1/update.fish ]; then
        fish ./$1/update.fish
    else
        bash ./$2/install.sh
    fi
else
  # find the updaters and run them iteratively
  find . -name update.fish -print0 | xargs -0 fish
  find . -name install.sh -print0 | xargs -0 bash
fi
